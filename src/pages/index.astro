---
import { defaultLang, getLocalizedPath } from '~/i18n/config'

const lang = defaultLang
const target = getLocalizedPath('/', lang)
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=${target}`} />
    <title>Redirecting…</title>
  </head>
  <body>
    <p>Redirecting to <a href={target}>{target}</a>…</p>
  </body>
</html>
