---
import type { GetStaticPaths } from 'astro'
import PostPage from '~/pages/_shared/PostPage.astro'
import { getPostStaticPaths } from '~/pages/_shared/postPaths'

export const getStaticPaths = (async () => {
  return getPostStaticPaths('vi')
}) satisfies GetStaticPaths

const { post, prev, next } = Astro.props
---

<PostPage post={post} prev={prev} next={next} lang="vi" />
