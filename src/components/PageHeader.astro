---
import { getLangFromAstro, stripLangFromPath, translate, type Lang } from '~/i18n/config'

interface Props {
  title?: string
  titlePieces?: string[]
  lang?: Lang
}

const { title, titlePieces, lang: langProp } = Astro.props
const lang = langProp ?? getLangFromAstro(Astro)

const strippedPath = stripLangFromPath(Astro.url.pathname)
const splitPath: string[] = strippedPath
  .split('/')
  .filter(Boolean)
  .map((part) => decodeURIComponent(part))

const pieces = titlePieces ?? splitPath

if (pieces.length === 0) {
  pieces.push('home')
}

const titleFromPieces = pieces.map((part) => `/ ${translate(lang, `breadcrumbs.${part}`)}`)
---

<div
  class="border-0 border-accent/30 bg-accent/6 rounded-xl inline-block py-2.5 pl-3 pr-4 mt-5 md:mt-8"
>
  <h1 class="text-accent text-2xl font-semibold flex flex-wrap gap-y-2 gap-x-3.5">
    {title ? <span>// {title}</span> : titleFromPieces.map((part) => <span>{part}</span>)}
  </h1>
</div>
